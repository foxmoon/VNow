<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlayout_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bar_top" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/btn_title_back_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/txt_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="创建会议"
                android:textColor="@color/list_white"
                android:textSize="@dimen/LargestTextSize"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/conf_create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="创建"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/conf_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_light_grey"
            android:hint="会议名称"
            android:padding="5dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/conf_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/setting_light_grey"
            android:hint="会议主题"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/conf_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/setting_light_grey"
            android:hint="会议开始时间"
            android:padding="5dp"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>