<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/bg_rct_contacts_list_item"
    android:minHeight="60dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_contact_catalog"
        style="@style/MMListCatalog"
        android:layout_height="wrap_content"
        android:paddingRight="4.0dip" />

    <LinearLayout
        android:id="@+id/llayout_item_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_contact_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center"
            android:src="@drawable/userhead" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_contact_name"
                style="@style/MMFontRecTitleList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:id="@+id/txt_contact_phone"
                style="@style/MMFontRecList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:id="@+id/contact_del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_delete_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/str_delete_contact"
            android:textColor="@color/white"
            android:textSize="@dimen/BasicTextSize"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/txt_contact_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="" />
    </LinearLayout>

</LinearLayout>