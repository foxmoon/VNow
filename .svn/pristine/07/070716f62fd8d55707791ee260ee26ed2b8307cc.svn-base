<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_text_contacts_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edit_search"
        android:hint="@string/str_edit_text_contacts_search"
        android:paddingLeft="25dp"
        android:singleLine="true"
        android:textSize="@dimen/SmallerTextSize" />

    <ImageView
        android:id="@+id/img_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_contacts_search"
        android:layout_alignLeft="@+id/edit_text_contacts_search"
        android:layout_alignTop="@+id/edit_text_contacts_search"
        android:scaleType="centerInside"
        android:src="@drawable/img_search_icon" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_contacts_search"
        android:layout_alignRight="@+id/edit_text_contacts_search"
        android:layout_alignTop="@+id/edit_text_contacts_search"
        android:background="@drawable/btn_search_contact"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/str_search"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/SmallerTextSize" />

</RelativeLayout>