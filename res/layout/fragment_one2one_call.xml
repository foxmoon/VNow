<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_black" >

    <LinearLayout
        android:id="@+id/llayout_call_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_contact_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txt_contact_call_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人名称"
            android:textColor="@color/white" />

        <Chronometer
            android:id="@+id/txt_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue_green" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_call_accept_bg"
            android:text="@string/str_conf_call_accept"
            android:textColor="@color/white"
            android:textSize="@dimen/LargestTextSize" />

        <Button
            android:id="@+id/btn_refused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_call_cancel_bg"
            android:text="@string/str_conf_call_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/LargestTextSize" />
    </LinearLayout>

</RelativeLayout>