<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/regist_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bar_top" >

        <ImageButton
           android:id="@+id/btn_back"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/btn_title_back_bg"
   	        android:background="@null"
   	        android:layout_centerVertical="true"
   	        android:scaleType="centerInside"
   	        android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="@string/str_regist_title"
            android:textColor="@color/white"
            android:textSize="@dimen/LargestTextSize"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regist_top_layout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/login_user_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_head" />
            </LinearLayout>

            <EditText
                android:id="@+id/regist_username_ed"
                style="@style/WideEditTextBG"
                android:layout_marginTop="0dp"
                android:hint="真实姓名"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/regist_password_ed"
                style="@style/WideEditTextBG"
                android:layout_marginTop="10dp"
                android:hint="设置密码（长度不小于六位）"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/regist_repassword_ed"
                style="@style/WideEditTextBG"
                android:layout_marginTop="10dp"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/regist_phone_ed"
                style="@style/WideEditTextBG"
                android:layout_marginTop="10dp"
                android:hint="手机号"
                android:inputType="phone"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/regist_email_ed"
                style="@style/WideEditTextBG"
                android:layout_marginTop="10dp"
                android:hint="公司邮箱"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/regist_code_ed"
                style="@style/WideEditTextBG"
                android:layout_marginTop="10dp"
                android:hint="公司代码（非企业用户默认000001）"
                android:inputType="number"
                android:textSize="14sp" />

            <Button
                android:id="@+id/regist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_blue_bg"
                android:text="加入VNow"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>