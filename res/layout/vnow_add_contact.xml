<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlayout_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bar_top" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />
        
        <TextView
                android:id="@+id/txt_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_tab_vnow"
                android:textColor="@color/list_white"
                android:textSize="@dimen/LargestTextSize"
                android:layout_toRightOf="@+id/btn_back"
                android:padding="10dp"
                android:textStyle="bold"
                android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_add_contacts_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_add_contact_edit_search"
            android:hint="@string/str_edit_text_id_search"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:textSize="@dimen/SmallerTextSize" />

        <ImageView
            android:id="@+id/img_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_add_contacts_search"
            android:layout_alignLeft="@+id/edit_add_contacts_search"
            android:layout_alignTop="@+id/edit_add_contacts_search"
            android:scaleType="centerInside"
            android:src="@drawable/img_search_icon" />

        <Button
            android:id="@+id/btn_add_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_add_contacts_search"
            android:layout_alignRight="@+id/edit_add_contacts_search"
            android:layout_alignTop="@+id/edit_add_contacts_search"
            android:background="@drawable/btn_search_contact"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2.5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/str_search"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/SmallerTextSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_add_phone_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_setting_one" >

        <ImageView
            android:id="@+id/img_phone_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/img_phone_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_phone_contact"
            android:text="@string/str_add_phone_contact"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/img_more_enter_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_add_qq_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_setting_one" >

        <ImageView
            android:id="@+id/img_qq_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/img_qq_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_qq_contact"
            android:text="@string/str_add_qq_contact"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/img_more_enter_icon" />
    </RelativeLayout>

</LinearLayout>